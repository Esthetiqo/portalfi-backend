# =============================================
# ENVIRONMENT: DEVELOPMENT/TESTING
# Early development phase - NOT for production
# Copy this file to .env and fill in your values
# =============================================

NODE_ENV="development"

# Database (Docker Compose PostgreSQL)
DATABASE_URL="postgresql://testuser:testpassword@localhost:5432/nestdb?schema=public"

# JWT Configuration
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRATION="7d"

# Server
PORT=3000

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# GnosisPay API (Sandbox/Testing)
GNOSISPAY_API_URL="https://api.gnosispay.com"
GNOSISPAY_CLIENT_ID="your-client-id-here"
GNOSISPAY_CLIENT_SECRET="your-client-secret-here"

# SMTP Email (Nodemailer)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"

# Use "true" or "1" for TLS/SSL (port 465), "false" or "0" for STARTTLS/plain
SMTP_SECURE="false"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
SMTP_FROM="Portalfi <no-reply@your-domain.com>"
